    //teacher,parent,i_client,schooladmin users
    $a = array(4,5,6,8);//teacher,parent,i_client,schooladmin
    if(!count(array_intersect($a,array_keys($user_edit->roles)))){
      if(arg(3) == 'Brainjogging Information'){

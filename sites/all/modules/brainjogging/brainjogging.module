      }
    }
    //Show school Under Brainjogging Information tab for all users
    //except site admin
    $a = array(4,5,6,7,8);//teacher,parent,i_client,schooladmin
    if(count(array_intersect($a,array_keys($user_edit->roles)))  && arg(3) == 'Brainjogging Information'){
      /*
